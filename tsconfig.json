{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES6",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "dist/",
    "declaration": true,
    "strict": true,
    "strictNullChecks": false
  },
  "include": ["src/**/*"]
}
